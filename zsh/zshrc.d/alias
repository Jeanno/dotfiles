# Aliases
alias g="git"
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
alias gs="git status"
alias gf="git fetch"
alias gp="git pull"
alias gP="git push"
alias gpp="git pull && git push"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gca="git commit --amend"
alias gco="git checkout"
alias gd="git diff"
alias gvdc="git difftool --tool=nvimdiff --no-prompt --cached"
alias gvd="git difftool --tool=nvimdiff --no-prompt"
alias gg="git grep"

alias v="nvim"

alias t="tmux"
alias ta="tmux attach"

alias n="npm"
alias nr="npm run"
alias ns="npm start"

alias lg="lazygit"

alias tf="terraform"

alias dkkill="docker kill \`docker ps | tail -n 1 | awk '{ print $1 }'\`"

alias o="open"
